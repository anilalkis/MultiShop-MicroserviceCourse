@model UpdateCargoCompanyDto
@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="CargoCompanyId"></input>
                        <label>Firma Adı</label>
                        <input type="text" class="form-control" asp-for="CargoCompanyName" />
                        <br />
                        <button type="submit" class="btn btn-primary">Firmayı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

