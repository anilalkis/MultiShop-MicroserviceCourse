@model UpdateProductDetailDto

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    var productid = ViewBag.Id;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDetailId" />
                        <input type="hidden" asp-for="@productid" />
                        <label>Ürün Açıklaması</label>
                        <textarea class="form-control" rows="7" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Ürün Bilgisi</label>
                        <textarea class="form-control" rows="7" asp-for="ProductInfo"></textarea>
                        <br />
                        <button type="submit" class="btn btn-primary">Ürün Görsellerini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

