@model UpdateProductImageDto

@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    var productid = ViewBag.Id;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductImageId" />
                        <input type="hidden" asp-for="@productid" />
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />
                        <button type="submit" class="btn btn-primary">Ürün Görsellerini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>