@model CreateSpecialOfferDto

@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Görsel Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Görsel Açıklaması</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />
                        <label>Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button type="submit" class="btn btn-primary">Özel Teklif Slider Görseli Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


